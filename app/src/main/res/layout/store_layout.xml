                android:text="$10.000"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:textStyle="bold" />
        </LinearLayout>

    </GridLayout>

    <!-- Productos Segunda Fila -->
    <GridLayout
        android:id="@+id/productGrid2"
        android:layout_width="match_parent"
